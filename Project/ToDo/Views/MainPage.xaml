<phone:PhoneApplicationPage
    x:Class="ToDo.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolkit="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls.Toolkit"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    SupportedOrientations="Portrait" Orientation="Portrait"
    shell:SystemTray.IsVisible="True"
    xmlns:controls="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls">

    <phone:PhoneApplicationPage.Resources>
            <DataTemplate x:Key="ListItemTemplate">
                <StackPanel Orientation="Vertical" Width="480" Background="Gray" Margin="-50,5,0,5">
                    <StackPanel Orientation="Vertical" MouseLeftButtonUp="TextBlock_MouseLeftButtonUp">
                        <TextBlock Text="{Binding Priority, Mode=TwoWay}" />
                        <TextBlock Text="{Binding Title, Mode=TwoWay}" FontSize="32" />
                    </StackPanel>

                    <StackPanel Visibility="Collapsed" Orientation="Horizontal">
                        <Button x:Name="FlagButton" Content="Flag" Click="FlagButton_Click" />
                        <Button x:Name="RemindButton"  Content="Remind" Click="Remind_Click"/>
                        <Button x:Name="NoteButton" Content="Note" Click="NoteButton_Click" />
                    </StackPanel>
                </StackPanel>
            </DataTemplate>

        <DataTemplate x:Key="ExpanderTemplate">
            <StackPanel Orientation="Vertical" Width="480" Background="Gray" Margin="0,5,0,5" />
        </DataTemplate>

    </phone:PhoneApplicationPage.Resources>


    <Grid x:Name="LayoutRoot" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <ScrollViewer Margin="5,0,5,0" Height="Auto" 
                        VerticalScrollBarVisibility="Visible"
                        HorizontalScrollBarVisibility="Disabled"
                        MouseLeftButtonUp="ScrollViewer_MouseLeftButtonUp">

            <StackPanel x:Name="TodayPanel" Grid.Row="0" Margin="0,0,0,0">

                <toolkit:ExpanderView IsExpanded="True" 
                                      Header="Today"
                                      FontSize="40"
                                      x:Name="todayExpanderView"
                                      FontStyle="Normal"
                                      Foreground="{StaticResource PhoneAccentBrush}"
                                      HorizontalAlignment="Left" 
                                      Height="Auto" Margin="10,66,0,0"
                                      VerticalAlignment="Top" 
                                      ItemsSource="{Binding TodayToDoItems}"
                                      ExpanderTemplate="{StaticResource ExpanderTemplate}"
                                      ItemTemplate="{StaticResource ListItemTemplate}"
                                      Width="Auto">
                    <!--<toolkit:ExpanderView.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock FontSize="40" Text="{Binding Header}"/>
                        </DataTemplate>
                        
                    </toolkit:ExpanderView.HeaderTemplate>-->
                   
                </toolkit:ExpanderView>

                <toolkit:ExpanderView IsExpanded="True" 
                                      Header="Tomorrow"
                                      FontSize="40"
                                      x:Name="tomorrowToDoItemsListBox"
                                      FontStyle="Normal"
                                      Foreground="{StaticResource PhoneAccentBrush}"
                                      HorizontalAlignment="Left" 
                                      Height="Auto" Margin="10,66,0,0"
                                      VerticalAlignment="Top" 
                                      ItemsSource="{Binding TomorrowToDoItems}"
                                      ItemTemplate="{StaticResource ListItemTemplate}"
                                      ExpanderTemplate="{StaticResource ExpanderTemplate}"
                                      Width="Auto" />

                <toolkit:ExpanderView IsExpanded="True" 
                                      Header="Later"
                                      FontSize="40"
                                      x:Name="laterToDoItemsListBox"
                                      FontStyle="Normal"
                                      Foreground="{StaticResource PhoneAccentBrush}"
                                      HorizontalAlignment="Left" 
                                      Height="Auto" Margin="10,66,0,0"
                                      VerticalAlignment="Top" 
                                      ItemTemplate="{StaticResource ListItemTemplate}"
                                      ExpanderTemplate="{StaticResource ExpanderTemplate}"
                                      ItemsSource="{Binding LaterToDoItems}" 
                                      Width="Auto"/>

            </StackPanel>

        </ScrollViewer>

    </Grid>


    <phone:PhoneApplicationPage.ApplicationBar>
        <shell:ApplicationBar IsVisible="True" IsMenuEnabled="True">
            <shell:ApplicationBarIconButton IconUri="/Images/add.png" Text="新建" Click="showNewNote_click"/>

            <shell:ApplicationBar.MenuItems>
                <shell:ApplicationBarMenuItem Text="编辑"/>
                <shell:ApplicationBarMenuItem Text="设置"/>
            </shell:ApplicationBar.MenuItems>
        </shell:ApplicationBar>
    </phone:PhoneApplicationPage.ApplicationBar>

</phone:PhoneApplicationPage>